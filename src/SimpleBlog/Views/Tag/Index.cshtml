@model IList<Tag>
@{
    ViewData["Title"] = "Tags";
}
    
<div class="card">
    <div class="card-body">
        <h1 class="card-title">Tags</h1>
        @if (!Model.Any())
        {
            <div class="text-center">
                <p>Oops, no tags here.</p>
            </div>
        }
        @foreach (var item in Model)
        {
            <a class="list-group-item list-group-item-action" asp-action="PostList" asp-route-slug="@item.Slug">@Html.DisplayFor(m => item.Name)</a>
        }    </div>
</div>