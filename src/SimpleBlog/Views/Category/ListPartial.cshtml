@model IList<Category>

<div class="list-group">
    @foreach (var item in Model)
    {
        <a class="list-group-item list-group-item-action" asp-action="PostList" asp-route-slug="@item.Slug">@Html.DisplayFor(m => item.Name)</a>
        if (item.Subcategories.Any())
        {
            <div class="ml-5">
                <partial name="ListPartial" for="@item.Subcategories" />
            </div>
        }
    }
</div>